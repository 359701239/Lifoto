<?xml version="1.0" encoding="utf-8"?>
<com.external.lifoto.design.widget.ElevationCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:foreground="?attr/selectableItemBackground"
    android:theme="@style/AppTheme.AppBarOverlay"
    android:transitionName="b"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardMaxElevation="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <com.external.lifoto.design.widget.ScaleImageView
            android:id="@+id/item_thumb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:transitionName="a" />

        <LinearLayout
            android:id="@+id/item_bottom"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:transitionName="c">

            <TextView
                android:transitionName="d"
                android:id="@+id/likes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_favorite"
                android:gravity="start"
                android:includeFontPadding="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize_mini" />

            <ImageView
                android:transitionName="e"
                android:id="@+id/more"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="center"
                android:src="@drawable/ic_more_vert"
                android:tint="@android:color/white" />

        </LinearLayout>
    </LinearLayout>

</com.external.lifoto.design.widget.ElevationCardView>